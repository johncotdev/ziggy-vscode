{
  "name": "zibol",
  "displayName": "Zibol",
  "description": "Language support for Zibol (Zig Business Oriented Language) - a free SynergyDE alternative",
  "version": "0.3.0",
  "publisher": "johncotdev",
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/zibol/ziggy-vscode"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:zibol"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "zibol",
        "aliases": [
          "Zibol",
          "ZBL",
          "Zig Business Oriented Language"
        ],
        "extensions": [
          ".zbl",
          ".ZBL"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/zibol.png",
          "dark": "./icons/zibol.png"
        }
      },
      {
        "id": "zibol-disasm",
        "aliases": [
          "Zibol Bytecode Disassembly"
        ],
        "extensions": []
      }
    ],
    "grammars": [
      {
        "language": "zibol",
        "scopeName": "source.zibol",
        "path": "./syntaxes/zibol.tmLanguage.json"
      },
      {
        "language": "zibol-disasm",
        "scopeName": "source.zibol-disasm",
        "path": "./syntaxes/zibol-disasm.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "zibol.run",
        "title": "Run Zibol File",
        "icon": "$(play)",
        "category": "Zibol"
      },
      {
        "command": "zibol.compile",
        "title": "Compile to Bytecode (.zbo)",
        "icon": "$(package)",
        "category": "Zibol"
      },
      {
        "command": "zibol.disassemble",
        "title": "Disassemble Bytecode",
        "icon": "$(code)",
        "category": "Zibol"
      },
      {
        "command": "zibol.runBytecode",
        "title": "Run with Bytecode VM",
        "icon": "$(vm)",
        "category": "Zibol"
      },
      {
        "command": "zibol.compileAndRun",
        "title": "Compile and Run",
        "icon": "$(run-all)",
        "category": "Zibol"
      },
      {
        "command": "zibol.restartLsp",
        "title": "Restart Language Server",
        "category": "Zibol"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "zibol.run",
          "when": "resourceLangId == zibol",
          "group": "navigation@1"
        },
        {
          "command": "zibol.runBytecode",
          "when": "resourceLangId == zibol",
          "group": "navigation@2"
        }
      ],
      "editor/context": [
        {
          "command": "zibol.run",
          "when": "resourceLangId == zibol",
          "group": "zibol@1"
        },
        {
          "command": "zibol.compile",
          "when": "resourceLangId == zibol",
          "group": "zibol@2"
        },
        {
          "command": "zibol.disassemble",
          "when": "resourceLangId == zibol",
          "group": "zibol@3"
        },
        {
          "command": "zibol.runBytecode",
          "when": "resourceLangId == zibol",
          "group": "zibol@4"
        },
        {
          "command": "zibol.compileAndRun",
          "when": "resourceLangId == zibol",
          "group": "zibol@5"
        }
      ],
      "commandPalette": [
        {
          "command": "zibol.run",
          "when": "resourceLangId == zibol"
        },
        {
          "command": "zibol.compile",
          "when": "resourceLangId == zibol"
        },
        {
          "command": "zibol.disassemble",
          "when": "resourceLangId == zibol"
        },
        {
          "command": "zibol.runBytecode",
          "when": "resourceLangId == zibol"
        },
        {
          "command": "zibol.compileAndRun",
          "when": "resourceLangId == zibol"
        },
        {
          "command": "zibol.restartLsp"
        }
      ]
    },
    "keybindings": [
      {
        "command": "zibol.run",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "resourceLangId == zibol"
      },
      {
        "command": "zibol.compile",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "resourceLangId == zibol"
      },
      {
        "command": "zibol.disassemble",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "resourceLangId == zibol"
      },
      {
        "command": "zibol.compileAndRun",
        "key": "ctrl+shift+f5",
        "mac": "cmd+shift+f5",
        "when": "resourceLangId == zibol"
      }
    ],
    "configuration": {
      "title": "Zibol",
      "properties": {
        "zibol.executablePath": {
          "type": "string",
          "default": "ziggy",
          "description": "Path to the ziggy executable."
        },
        "zibol.lspPath": {
          "type": "string",
          "default": "/Users/johnc/.local/bin/zibol-lsp",
          "description": "Path to the Zibol Language Server executable."
        },
        "zibol.runInTerminal": {
          "type": "boolean",
          "default": true,
          "description": "Run Zibol programs in the integrated terminal (true) or output panel (false)."
        },
        "zibol.executionMode": {
          "type": "string",
          "enum": [
            "interpreter",
            "bytecode"
          ],
          "default": "interpreter",
          "description": "Default execution mode: 'interpreter' for tree-walking interpreter, 'bytecode' for compiled bytecode VM."
        },
        "zibol.showDisassemblyOnCompile": {
          "type": "boolean",
          "default": false,
          "description": "Automatically show bytecode disassembly after compiling."
        },
        "zibol.bytecodeOutputDir": {
          "type": "string",
          "default": "",
          "description": "Directory for compiled bytecode (.zbo) output. Empty uses the source file directory."
        },
        "zibol.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the Zibol language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
