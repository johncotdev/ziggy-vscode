{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Ziggy Bytecode Disassembly",
  "scopeName": "source.zbc-disasm",
  "patterns": [
    { "include": "#comments" },
    { "include": "#section-headers" },
    { "include": "#instructions" },
    { "include": "#addresses" },
    { "include": "#constants" },
    { "include": "#operands" },
    { "include": "#strings" },
    { "include": "#numbers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.semicolon.zbc-disasm",
          "match": ";.*$"
        }
      ]
    },
    "section-headers": {
      "patterns": [
        {
          "name": "markup.heading.section.zbc-disasm",
          "match": "^;\\s*===.*===\\s*$"
        },
        {
          "name": "keyword.control.header.zbc-disasm",
          "match": "(?i)^;\\s*(Version|Entry Point|Flags|Magic|Source Hash):.*$"
        }
      ]
    },
    "addresses": {
      "patterns": [
        {
          "name": "constant.numeric.address.zbc-disasm",
          "match": "^\\s*[0-9a-fA-F]{4}:"
        }
      ]
    },
    "instructions": {
      "patterns": [
        {
          "name": "keyword.control.opcode.stack.zbc-disasm",
          "match": "(?i)\\b(push_i8|push_i16|push_i32|push_i64|push_const|push_null|pop|dup|dup2|swap|rotate)\\b"
        },
        {
          "name": "keyword.control.opcode.local.zbc-disasm",
          "match": "(?i)\\b(load_local|load_local_0|load_local_1|load_local_2|load_local_3|store_local|store_local_0|store_local_1|store_local_2|store_local_3)\\b"
        },
        {
          "name": "keyword.control.opcode.global.zbc-disasm",
          "match": "(?i)\\b(load_global|store_global|load_common|store_common)\\b"
        },
        {
          "name": "keyword.control.opcode.record.zbc-disasm",
          "match": "(?i)\\b(new_record|load_field|load_field_0|load_field_1|load_field_2|store_field|store_field_0|store_field_1|store_field_2|clear_record|init_record)\\b"
        },
        {
          "name": "keyword.operator.opcode.arithmetic.zbc-disasm",
          "match": "(?i)\\b(add|sub|mul|div|mod|neg|incr|decr|int_div|power|add_dec|sub_dec|mul_dec|div_dec)\\b"
        },
        {
          "name": "keyword.operator.opcode.comparison.zbc-disasm",
          "match": "(?i)\\b(cmp_eq|cmp_ne|cmp_lt|cmp_le|cmp_gt|cmp_ge|cmp_str_eq|cmp_str_ne|cmp_str_lt|cmp_str_le|cmp_str_gt|cmp_str_ge|log_and|log_or|log_not|log_xor|bit_and|bit_or|bit_not|bit_xor|bit_shl|bit_shr)\\b"
        },
        {
          "name": "keyword.control.opcode.flow.zbc-disasm",
          "match": "(?i)\\b(jump|jump_if_true|jump_if_false|jump_wide|loop_start|loop_end|case_start|case_match|case_end)\\b"
        },
        {
          "name": "keyword.control.opcode.call.zbc-disasm",
          "match": "(?i)\\b(call|call_external|call_method|xcall|ret|ret_value|xreturn|freturn|mreturn)\\b"
        },
        {
          "name": "keyword.control.opcode.channel.zbc-disasm",
          "match": "(?i)\\b(ch_open|ch_close|ch_read|ch_reads|ch_write|ch_writes|ch_display|ch_accept|ch_get|ch_gets|ch_put|ch_puts)\\b"
        },
        {
          "name": "keyword.control.opcode.isam.zbc-disasm",
          "match": "(?i)\\b(isam_create|isam_open|isam_close|isam_read|isam_reads|isam_write|isam_store|isam_delete|isam_find|isam_rewind|isam_lock|isam_unlock|isam_flush)\\b"
        },
        {
          "name": "support.function.opcode.string.zbc-disasm",
          "match": "(?i)\\b(str_concat|str_slice|str_len|str_size|str_trim|str_ltrim|str_atrim|str_upper|str_lower|str_find|str_replace|str_pad|str_format)\\b"
        },
        {
          "name": "support.function.opcode.convert.zbc-disasm",
          "match": "(?i)\\b(to_int|to_dec|to_str|to_alpha|to_packed|widen|narrow|box|unbox)\\b"
        },
        {
          "name": "support.function.opcode.builtin.zbc-disasm",
          "match": "(?i)\\b(fn_abs|fn_sqrt|fn_sin|fn_cos|fn_tan|fn_log|fn_log10|fn_exp|fn_round|fn_trunc|fn_date|fn_time|fn_size|fn_len|fn_error|fn_mem)\\b"
        },
        {
          "name": "keyword.control.opcode.extended.zbc-disasm",
          "match": "(?i)\\b(nop|halt|debug_line|debug_break|assert|throw|try_start|try_end|catch)\\b"
        }
      ]
    },
    "operands": {
      "patterns": [
        {
          "name": "variable.parameter.operand.zbc-disasm",
          "match": "@\\d+"
        },
        {
          "name": "constant.other.operand.zbc-disasm",
          "match": "#\\d+"
        },
        {
          "name": "variable.other.operand.zbc-disasm",
          "match": "argc=\\d+"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.other.constant-index.zbc-disasm",
          "match": "\\[\\d{4}\\]"
        },
        {
          "name": "storage.type.constant-type.zbc-disasm",
          "match": "(?i)\\b(id|int|dec|str|alpha|rec|rtn)\\("
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.zbc-disasm",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.zbc-disasm",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.zbc-disasm",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.hex.zbc-disasm",
          "match": "\\b[0-9a-fA-F]{2}(?:\\s+[0-9a-fA-F]{2})*\\b"
        },
        {
          "name": "constant.numeric.decimal.zbc-disasm",
          "match": "\\b\\d+\\b"
        }
      ]
    }
  }
}
